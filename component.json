{
    "title": "sphere-order-distribution",
    "description": "Syncronizes your SPHERE.IO orders from the marketplace master to the merchant's project.",
    "url" : "http://www.commercetools.com",
    "credentials": {
        "fields": {
            "masterProjectKey": {
                "viewClass": "TextFieldView",
                "label": "Project Key",
                "required": true,
                "placeholder": "Paste master project key"
            },
            "masterClientId": {
                "viewClass": "TextFieldView",
                "label": "Client Id",
                "required": true,
                "placeholder": "Paste master client id"
            },
            "masterClientSecret": {
                "viewClass": "TextFieldView",
                "label": "Client Secret",
                "required": true,
                "placeholder": "Paste master client secret"
            },
            "retailerProjectKey": {
                "viewClass": "TextFieldView",
                "label": "Project Key",
                "required": true,
                "placeholder": "Paste retailer project key"
            },
            "retailerClientId": {
                "viewClass": "TextFieldView",
                "label": "Client Id",
                "required": true,
                "placeholder": "Paste retailer client id"
            },
            "retailerClientSecret": {
                "viewClass": "TextFieldView",
                "label": "Client Secret",
                "required": true,
                "placeholder": "Paste retailer client secret"
            }
        }
    },
    "actions": {
        "services": {
            "main": "elasticio.js",
            "title": "Order Master -> Retailer Distribution",
        }
    }
}
